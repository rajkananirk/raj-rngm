@model CP_TenantMasterVm
<!-- Passcode modal popup design starts -->
<div class="modal" id="mdPasscode" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <form asp-controller="" class="needs-validation" asp-action="" method="post" id="frmPasscode" asp-antiforgery="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Only for @Model.SiteName employees</h2>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <p class="modal-desc-dark">Please enter a valid passcode to access the restricted area of this website.</p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-12">
                            <small><span class="required">*</span> Indicates a required field</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label for="Passcode" class="form-label">Passcode <span class="required">*</span></label>
                            <div class="passcode-icon">
                                <input autocomplete=off id="Passcode" aria-describedby="Passcode-error" maxlength="128" name="Passcode" type="password" required="required" placeholder="******" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <p class="small">If you need a passcode to enter the site, please press Request Passcode below, and follow the next steps to have a passcode be emailed to you.</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-primary me-3 ladda-button" id="btnSubmitPasscode" data-style="slide-up">Submit</button>
                    <button class="btn-secondary ladda-button" id="btnOpenRequestPasscode" data-style="slide-up">Request Passcode</button>
                </div>
            </div>
        </form>
    </div>
</div> <!-- Passcode modal popup design ends -->
<!-- Request Passcode modal popup design starts -->
<div class="modal" id="mdRequestPasscode" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <form asp-controller="" class="needs-validation" asp-action="" method="post" id="frmRequestPasscode" asp-antiforgery="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Get your passcode to access the site</h2>
                </div>
                <div class="modal-body">
                    <div class="row mb-2">
                        <div class="col-12">
                            <small><span class="required">*</span> Indicates a required field</small>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 mb-32">
                            <label for="TPFirstName" class="form-label">First Name <span class="required">*</span></label>
                            <input id="TPFirstName" maxlength="250" name="TPFirstName" aria-describedby="TPFirstName-error" type="text" required="required" class="form-control" placeholder="Type your first name" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 mb-32">
                            <label for="TPLastName" class="form-label">Last Name <span class="required">*</span></label>
                            <input id="TPLastName" maxlength="250" name="TPLastName" aria-describedby="TPLastName-error" type="text" required="required" class="form-control" placeholder="Type your last name" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 mb-55">
                            <label for="TPEmail" class="form-label">Email <span class="required">*</span></label>
                            <input id="TPEmail" maxlength="250" name="TPEmail" aria-describedby="TPEmail-error" type="email" required="required" class="form-control" placeholder="Your email id" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-primary me-3 ladda-button" id="btnRequestPasscode" data-style="slide-up">Submit</button>
                    <button class="btn-secondary ladda-button" id="btnOpenPasscode" data-style="slide-up">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Request Passcode modal popup design ends -->

<script>
    var UrlValidateTenantPasscode = '@Url.Action("ValidateTenantPasscode", "Home")';
    var UrlRequestPasscode = '@Url.Action("RequestPasscode", "Home")'; 
</script>