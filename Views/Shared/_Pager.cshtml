@model PagerVm

<input type="hidden" asp-for="CurrentPage" />

<div class="row">
    <div class="col-12">
        <div class="pagination-block mt-5">
            <div class="listing-details">
                <div class="listing-count">
                    <select onchange="pageChange('1')"
                            class="form-select" asp-for="PageSize"
                            asp-items="@(new SelectList(DropdownFunctions.GetPageSize(), "value", "text"))">
                    </select>
                </div>
                <div class="showing-records">
                    <span>Showing @Model.StartIndex to @Model.EndIndex of @Model.TotalItems entries</span>
                </div>
            </div>
            <div class="pagination-list" role="navigation" aria-label="pagination">
                <ul>
                    @if (Model.CurrentPage > 1)
                    {
                        <li>
                            <a href="javascript:void(0)" onclick="pageChange('@(Model.CurrentPage - 1)')">
                                <span class="previous-details me-2">
                                    <i class="fa fa-chevron-left"></i>
                                </span>
                            </a>
                        </li>
                    }

                    @for (var item = Model.StartPage; item <= Model.EndPage; item++)
                    {
                        <li class="@(item == Model.CurrentPage ? "active" : "")">
                            <a href="javascript:void(0)" onclick="pageChange('@item')">
                                @item
                            </a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li>
                            <a href="javascript:void(0)" onclick="pageChange('@(Model.CurrentPage + 1)')">
                                <span class="previous-details me-2">
                                    <i class="fa fa-chevron-right"></i>
                                </span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

