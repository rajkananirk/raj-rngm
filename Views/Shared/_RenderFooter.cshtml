@model Tuple<CP_TenantMasterVm, List<CP_TenantDetailTypeTxnVm>, CP_ClientMenuVm?>

@{
    var copyRights = Model.Item2.FirstOrDefault(s => s.TenantDetailTypeId == (int)EnumList.TenantDetailType.Copyrights);
    var copyRightYear = Model.Item2.FirstOrDefault(s => s.TenantDetailTypeId == (int)EnumList.TenantDetailType.CopyrightsYear);
    var powerBy = Model.Item2.FirstOrDefault(s => s.TenantDetailTypeId == (int)EnumList.TenantDetailType.PoweredBy);
}


@if (Model.Item3 != null && !string.IsNullOrWhiteSpace(Model.Item3.Footer))
{
    @Html.Raw(Model.Item3.Footer)
}
else
{
    <footer>
        <section class="footer-top-section">
            <div class="container-fluid p-0">
                <svg id="bigHalfCircle" xmlns="http://www.w3.org/2000/svg" version="1.1" fill="#fff" width="100%" height="100" viewBox="0 0 100 100" preserveAspectRatio="none">
                    <path d="M0 100 C40 0 60 0 100 100 Z"></path>
                </svg>
                <div class="footer-top-data">
                    <h2 class="footer-top-title">
                        Need Support?
                    </h2>
                    <p class="footer-top-text">Fill out this quick <a href="javascript:void(0)" onclick="redirectToContact()">Contact Us</a> form, and someone from our team will reach out to you.</p>
                </div>
            </div>
        </section>

        @if (Model.Item1.SiteName == "Elevance Health")
        {
            <section class="footer-copyright-section">
                <div class="container-fluid">
                    <div class="copyright-text">
                        © @copyRightYear?.Value <a href="@copyRights?.ChildValue" target="_blank"
                                                   aria-label="TalentArbor opens a new window"> @copyRights?.Value</a>, a product of <a href="https://rangam.com/" target="_blank" aria-label="Rangam opens a new window">Rangam</a>
                                            </div>
                                        </div>
                                    </section>
                                }
                                else
                                {
                                    <section class="footer-copyright-section">
                                        <div class="container-fluid">
                                            <div class="copyright-text">
                                                © @copyRightYear?.Value <a href="@copyRights?.ChildValue" target="_blank" aria-label="SourceAbled opens a new window">@copyRights?.Value</a> | Powered by <a href="@powerBy?.ChildValue" target="_blank" aria-label="TalentArbor opens a new window">@powerBy?.Value</a>, a product of <a href="https://rangam.com/" target="_blank" aria-label="Rangam opens a new window">Rangam</a>
                                            </div>
                                        </div>
                                    </section>
                                }

        <a href="#" class="scroll-to-top" aria-label="Back to top"><i class="icon"></i></a>

    </footer>
}
